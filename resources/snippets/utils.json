      "function throttle(() => {",
      "   let last = 0",
      "   return (callback, wait = 800) => {",
      "       let now = +new Date()",
      "       if (now - last > wait) {",
      "           callback()",
      "           last = now",
      "       }",
      "   }",
      "})()"
    ],
    "style": "js",
