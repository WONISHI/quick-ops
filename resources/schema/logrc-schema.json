{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Quick Ops Config",
    "description": "Configuration file for Quick Ops extension",
    "type": "object",
    "properties": {
        "general": {
            "type": "object",
            "description": "General settings",
            "properties": {
                "debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug mode"
                },
                "excludeConfigFiles": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to ignore configuration files in Git"
                }
            }
        },
        "logger": {
            "type": "object",
            "description": "Logger settings",
            "properties": {
                "template": {
                    "type": "string",
                    "default": "[icon]-[~/^/^/name]-[line]-[$0]",
                    "description": "Log output template"
                },
                "dateFormat": {
                    "type": "string",
                    "default": "YYYY-MM-DD HH:mm:ss"
                }
            }
        },
        "git": {
            "type": "object",
            "description": "Git integration settings",
            "properties": {
                "ignoreList": {
                    "type": "array",
                    "description": "List of files to ignore/skip-worktree",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                }
            }
        },
        "utils": {
            "type": "object",
            "properties": {
                "uuidLength": {
                    "type": "integer",
                    "default": 12
                }
            }
        },
        "project": {
            "type": "object",
            "properties": {
                "alias": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {
                        "@/": "./src/"
                    }
                },
                "marks": {
                    "type": "object"
                }
            }
        }
    }
}