{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry Config",
    "description": "Quick Ops 锚点数据存储文件 (Anchors storage file for Quick Ops)",
    "type": "object",
    "definitions": {
        "anchorItem": {
            "type": "object",
            "required": [
                "filePath",
                "line",
                "content",
                "group",
                "id",
                "timestamp"
            ],
            "properties": {
                "filePath": {
                    "type": "string",
                    "description": "文件相对路径 (Relative file path)"
                },
                "line": {
                    "type": "number",
                    "description": "行号 (Line number)"
                },
                "content": {
                    "type": "string",
                    "description": "行内容快照 (Snapshot of the line content)"
                },
                "group": {
                    "type": "string",
                    "description": "所属分组 (Group name)"
                },
                "id": {
                    "type": "string",
                    "description": "唯一标识符 (Unique identifier)"
                },
                "timestamp": {
                    "type": "number",
                    "description": "创建时间戳 (Creation timestamp)"
                },
                "description": {
                    "type": "string",
                    "description": "锚点备注信息或下一分组标题 (Anchor note or subgroup title)"
                },
                "sort": {
                    "type": "number",
                    "description": "组内排序权重 (Sorting weight within the group)"
                },
                "pid": {
                    "type": "string",
                    "description": "父级锚点ID (Parent Anchor ID)"
                },
                "items": {
                    "type": "array",
                    "description": "子级锚点列表 (Nested child anchors)",
                    "items": {
                        "$ref": "#/definitions/anchorItem"
                    }
                }
            }
        }
    },
    "properties": {
        "groups": {
            "type": "array",
            "description": "锚点分组列表 (List of anchor groups)",
            "items": {
                "type": "string"
            },
            "default": [
                "Default"
            ]
        },
        "children": {
            "type": "array",
            "description": "子分组索引列表 (Index of subgroup names)",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "anchors": {
            "type": "array",
            "description": "具体的锚点记录 (List of anchor records)",
            "items": {
                "$ref": "#/definitions/anchorItem"
            }
        }
    }
}