{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Quick Ops Config",
    "description": "Quick Ops 插件配置文件 (Configuration file for Quick Ops extension)",
    "type": "object",
    "properties": {
        "general": {
            "type": "object",
            "description": "常规设置 (General settings)",
            "properties": {
                "debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "启用调试模式 (Enable debug mode)"
                },
                "excludeConfigFiles": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否在 Git 中忽略配置文件 (Whether to ignore configuration files in Git)"
                }
            }
        },
        "logger": {
            "type": "object",
            "description": "日志记录器设置 (Logger settings)",
            "properties": {
                "template": {
                    "type": "string",
                    "default": "[icon]-[~/^/^/name]-[line]-[$0]",
                    "description": "日志输出模板 (Log output template)"
                },
                "dateFormat": {
                    "type": "string",
                    "default": "YYYY-MM-DD HH:mm:ss",
                    "description": "日期格式 (Date format)"
                }
            }
        },
        "git": {
            "type": "object",
            "description": "Git 集成设置 (Git integration settings)",
            "properties": {
                "ignoreList": {
                    "type": "array",
                    "description": "需要忽略或执行 skip-worktree 的文件列表 (List of files to ignore/skip-worktree)",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                }
            }
        },
        "utils": {
            "type": "object",
            "description": "工具函数设置 (Utility settings)",
            "properties": {
                "uuidLength": {
                    "type": "integer",
                    "default": 12,
                    "description": "UUID 生成长度 (UUID generation length)"
                }
            }
        },
        "project": {
            "type": "object",
            "description": "项目相关设置 (Project settings)",
            "properties": {
                "alias": {
                    "type": "object",
                    "description": "路径别名配置 (Path alias configuration)",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {
                        "@/": "./src/"
                    }
                },
                "marks": {
                    "type": "object",
                    "description": "代码标注配置 (Code marks configuration)"
                }
            }
        },
        "snippets": {
            "type": "array",
            "description": "自定义代码片段配置 (Custom code snippets configuration)",
            "items": {
                "type": "object",
                "required": [
                    "prefix",
                    "body"
                ],
                "properties": {
                    "style": {
                        "type": "string",
                        "description": "Markdown文档中代码块的语言高亮 (Syntax highlighting language in Markdown documentation)"
                    },
                    "prefix": {
                        "type": "string",
                        "description": "代码片段触发关键词 (Trigger keyword for the snippet)"
                    },
                    "body": {
                        "type": [
                            "string",
                            "array"
                        ],
                        "items": {
                            "type": "string"
                        },
                        "description": "代码片段内容，支持字符串或数组形式 (The content of the snippet. Can be a single string or an array of strings)"
                    },
                    "description": {
                        "type": "string",
                        "description": "代码片段的功能描述 (Description of what this snippet does)"
                    },
                    "scope": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "语言作用域，如 'javascript,typescript'，缺省则全局生效 (Language scope. If omitted, applies globally)"
                    }
                }
            },
            "default": []
        },
        "shells": {
            "type": "array",
            "description": "工作区自定义 Shell 命令配置 (Custom shell commands configuration for workspace)",
            "items": {
                "type": "object",
                "required": [
                    "description",
                    "cmd"
                ],
                "properties": {
                    "description": {
                        "type": "string",
                        "description": "在快速选择列表中显示的描述文字 (Description displayed in the QuickPick list)"
                    },
                    "cmd": {
                        "type": "string",
                        "description": "要执行的 Shell 命令。支持 ${name}, ${file}, [[Branch]] 等模板变量 (The shell command to execute. Supports template variables)"
                    },
                    "keepOpen": {
                        "type": "boolean",
                        "default": false,
                        "description": "执行命令后是否保持快速选择列表打开 (Whether to keep the QuickPick list open after executing this command)"
                    }
                }
            },
            "default": []
        }
    }
}