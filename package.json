{
  "name": "quick-ops",
  "displayName": "Quick Ops: Code Utils & Anchors",
  "description": "Boost productivity with Code Anchors, SCSS structure generation, and essential navigation shortcuts.",
  "version": "0.0.20",
  "engines": {
    "vscode": "^1.73.0"
  },
  "sideEffects": false,
  "publisher": "quick-ops",
  "keywords": [
    "anchor",
    "bookmark",
    "navigation",
    "scroll",
    "scss",
    "css structure",
    "productivity",
    "tool",
    "quick-ops",
    "vue",
    "react"
  ],
  "categories": [
    "Other",
    "Snippets"
  ],
  "icon": "./icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/WONISHI/quick-ops.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:vue",
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "filenames": [
          ".quickopsrc"
        ]
      },
      {
        "id": "json",
        "filenames": [
          ".telemetryrc"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".quickopsrc",
        "url": "./resources/schema/.quickopsrc-schema.json"
      }
    ],
    "webviews": {
      "allowScripts": true,
      "allowLinks": true
    },
    "commands": [
      {
        "command": "quickOps.revealInExplorer",
        "title": "定位当前文件 (Reveal File)",
        "category": "Quick Ops",
        "icon": {
          "light": "resources/svg/position-dark.svg",
          "dark": "resources/svg/position-light.svg"
        }
      },
      {
        "command": "quickOps.scrollToTop",
        "title": "回到顶部 (Scroll to Top)",
        "icon": {
          "light": "resources/svg/top-dark.svg",
          "dark": "resources/svg/top-light.svg"
        }
      },
      {
        "command": "quickOps.scrollToBottom",
        "title": "回到底部 (Scroll to Bottom)",
        "category": "Quick Ops",
        "icon": {
          "light": "resources/svg/bottom-dark.svg",
          "dark": "resources/svg/bottom-light.svg"
        }
      },
      {
        "command": "quickOps.createConfigFile",
        "title": "创建配置文件 (Create .quickopsrc)",
        "category": "Quick Ops"
      },
      {
        "command": "quick-ops.generateStyleStructure",
        "title": "生成样式结构 (Generate SCSS)",
        "category": "Quick Ops"
      },
      {
        "command": "quick-ops.anchor.add",
        "title": "Add Anchor Point (添加锚点)",
        "icon": "$(bookmark)"
      },
      {
        "command": "quick-ops.anchor.showMenu",
        "title": "Show Anchors"
      },
      {
        "command": "quick-ops.anchor.listByGroup",
        "title": "List Anchors"
      },
      {
        "command": "quick-ops.anchor.navigate",
        "title": "Navigate Anchor"
      },
      {
        "command": "quick-ops.anchor.delete",
        "title": "Delete Anchor"
      },
      {
        "command": "quick-ops.addToSnippets",
        "title": "添加选中内容到代码片段 (Add to Quick Ops Snippets)"
      },
      {
        "command": "quick-ops.transformToLower",
        "title": "剪贴板转全部小写 (Clipboard to lowercase)"
      },
      {
        "command": "quick-ops.transformToCamel",
        "title": "剪贴板转小驼峰 (Clipboard to camelCase)"
      },
      {
        "command": "quick-ops.transformToPascal",
        "title": "剪贴板转大驼峰 (Clipboard to PascalCase)"
      },
      {
        "command": "quick-ops.transformToConstant",
        "title": "剪贴板转全大写常量 (Clipboard to CONSTANT_CASE)"
      },
      {
        "command": "quick-ops.transformToFirstUpper",
        "title": "剪贴板首字母大写 (Clipboard to UpperFirst)"
      },
      {
        "command": "quick-ops.transformToKebab",
        "title": "剪贴板转短横线 (Clipboard to kebab-case)"
      }
    ],
    "keybindings": [
      {
        "command": "quick-ops.transformToKebab",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus"
      },
      {
        "command": "quick-ops.transformToLower",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus"
      },
      {
        "command": "quick-ops.transformToCamel",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "quick-ops.transformToPascal",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "quick-ops.transformToConstant",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "quick-ops.transformToFirstUpper",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quickOps.revealInExplorer",
          "when": "resourceLangId != ''",
          "group": "navigation@1"
        },
        {
          "command": "quickOps.scrollToTop",
          "group": "navigation@2",
          "when": "editorTextFocus"
        },
        {
          "command": "quickOps.scrollToBottom",
          "group": "navigation@3",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "quickOps.createConfigFile",
          "group": "quickOps@1",
          "when": "quickOps.context.configMissing"
        },
        {
          "command": "quick-ops.generateStyleStructure",
          "group": "quickOps@2",
          "when": "resourceLangId == vue || resourceLangId == html || resourceLangId == javascriptreact || resourceLangId == typescriptreact"
        }
      ],
      "editor/context": [
        {
          "command": "quick-ops.addToSnippets",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "quick-ops.anchor.add",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "build": "npx vsce package --no-yarn --no-dependencies",
    "vscode:prepublish": "pnpm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "node ./dist/test/extension.test.js"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.28.0",
    "@types/cheerio": "^1.0.0",
    "@types/glob": "^9.0.0",
    "@types/lodash-es": "^4",
    "@types/mocha": "^10.0.10",
    "@types/mockjs": "^1.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "prettier": "^3.6.2",
    "pug": "^3.0.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-bundle-analyzer": "^5.2.0",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.18.0",
    "yarn": "4.10.3"
  },
  "dependencies": {
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@babel/types": "^7.28.6",
    "@vue/compiler-sfc": "^3.5.20",
    "change-case": "^5.4.4",
    "cheerio": "^1.1.2",
    "dayjs": "^1.11.13",
    "ignore": "^7.0.5",
    "lodash-es": "^4.17.23",
    "mockjs": "^1.1.0",
    "nanoid": "^5.1.6",
    "terser-webpack-plugin": "^5.3.14"
  }
}
