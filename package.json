{
  "name": "scope-search",
  "displayName": "scope-search",
  "description": "area-search",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "publisher": "scope-search", 
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WONISHI/scope-search.git"
  },
  "activationEvents": [
    "onCommand:scope-search.search"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scope-search.search",
        "title": "自定义搜索",
        "category": "Scope Search"
      },
      {
        "command": "scope-search.resetHighlight",
        "title": "重置搜索",
        "category": "Scope Search"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "scope-search.search",
          "group": "navigation"
        },
        {
          "command": "scope-search.resetHighlight",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.18.0"
  }
}