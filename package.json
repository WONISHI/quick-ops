{
  "name": "quick-ops",
  "displayName": "quickOps",
  "description": "quick-ops",
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.54.0"
  },
  "publisher": "quick-ops",
  "categories": [
    "Other"
  ],
  "icon": "./icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/WONISHI/quick-ops.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "webviews": {
      "allowScripts": true,
      "allowLinks": true
    },
    "commands": [
      {
        "command": "quickOps.revealInExplorer",
        "title": "定位当前文件 (Reveal File)",
        "category": "Quick Ops",
        "icon": {
          "light": "resources/svg/position-dark.svg",
          "dark": "resources/svg/position-light.svg"
        }
      },
      {
        "command": "quickOps.scrollToTop",
        "title": "回到顶部 (Scroll to Top)",
        "icon": {
          "light": "resources/svg/top-dark.svg",
          "dark": "resources/svg/top-light.svg"
        }
      },
      {
        "command": "quickOps.scrollToBottom",
        "title": "回到底部 (Scroll to Bottom)",
        "category": "Quick Ops",
        "icon": {
          "light": "resources/svg/bottom-dark.svg",
          "dark": "resources/svg/bottom-light.svg"
        }
      },
      {
        "command": "quickOps.createConfigFile",
        "title": "创建配置文件 (Create .logrc)",
        "category": "Quick Ops"
      },
      {
        "command": "quickOps.generateTsType",
        "title": "生成 TS 类型 (Generate TypeScript Interface)",
        "category": "Quick Ops"
      },
      {
        "command": "quickOps.generateMockData",
        "title": "生成模拟数据 (Generate Mock Data)",
        "category": "Quick Ops"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quickOps.revealInExplorer",
          "when": "resourceLangId != ''",
          "group": "navigation@1"
        },
        {
          "command": "quickOps.scrollToTop",
          "group": "navigation@2",
          "when": "editorTextFocus"
        },
        {
          "command": "quickOps.scrollToBottom",
          "group": "navigation@3",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "quickOps.createConfigFile",
          "group": "quickOps@1",
          "when": "quickOps.context.configMissing"
        }
      ],
      "editor/context": [
        {
          "command": "quickOps.generateTsType",
          "group": "quickOps@1",
          "when": "editorHasSelection && quickOps.context.canGenerateType"
        },
        {
          "command": "quickOps.generateMockData",
          "group": "quickOps@2",
          "when": "editorHasSelection && quickOps.context.canGenerateMock"
        }
      ]
    }
  },
  "scripts": {
    "build": "npx vsce package",
    "vscode:prepublish": "pnpm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "pug": "^3.0.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.18.0",
    "yarn": "4.10.3"
  },
  "dependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@types/express": "^5.0.3",
    "@types/mockjs": "^1.0.10",
    "@vue/compiler-sfc": "^3.5.20",
    "cheerio": "^1.1.2",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "ignore": "^7.0.5",
    "mockjs": "^1.1.0",
    "terser-webpack-plugin": "^5.3.14",
    "vscode-languageclient": "^9.0.1",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
